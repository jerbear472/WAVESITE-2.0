# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Database URL for SQLAlchemy (using Supabase PostgreSQL)
# Format: postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://user:[password]@host:5432/database

# Authentication
# IMPORTANT: Generate a strong secret key for production
# You can use: openssl rand -hex 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY

# AWS (for file storage - optional, can use Supabase Storage)
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_bucket_name

# Stripe (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# SendGrid (for emails)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379

# Application
DEBUG=False
ALLOWED_ORIGINS=https://yourdomain.com

# SECURITY NOTICE:
# - Never commit real credentials to version control
# - Use environment-specific .env files that are gitignored
# - Rotate secrets regularly
# - Use a secrets management service in production